{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 12",

  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "target": "es5",
    "outDir": "dist",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "watch": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
